      var t=0;
    function signuptype(){
      var type=document.getElementById("sign").value;

      if(type=="Warden"){
        if(t==2){
              document.getElementById("m1").classList.remove("sr-only");
              document.getElementById("m2").classList.remove("sr-only");
        }
        document.getElementById("war1").classList.add("sr-only");
        document.getElementById("war3").classList.remove("top-row");
        document.getElementById("war2").classList.add("sr-only");
        t=1;
      }
      if(type=="Student"){
        if(t==1){
          document.getElementById("war1").classList.remove("sr-only");
          document.getElementById("war2").classList.remove("sr-only");
          document.getElementById("war3").classList.add("top-row");
        }
        else if(t==2){
              document.getElementById("m1").classList.remove("sr-only");
              document.getElementById("m2").classList.remove("sr-only");
            }
        t=0;
      }
      if(type=="Mess"){
        if(t==1){
          document.getElementById("war1").classList.remove("sr-only");
          document.getElementById("war2").classList.remove("sr-only");
          document.getElementById("war3").classList.add("top-row");
        }
        document.getElementById("m1").classList.add("sr-only");
        document.getElementById("m2").classList.add("sr-only");
        t=2;
      }
    }
    </script>
