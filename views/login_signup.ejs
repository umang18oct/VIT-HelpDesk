    <div class="form">
      <ul class="tab-group">
        <li class="tab active"><a href="#signup">Sign Up</a></li>
        <li class="tab"><a href="#login">Log In</a></li>
      </ul>
        <div class="tab-content">
        <div id="signup">
          <h1>Sign Up for Free</h1>
          <form action="/register" method="post">
         <div class="field-wrap">
             <select class="select-btn" id="sign" onchange="signuptype()" name="userType">
            <option value="Student" selected> Student</option>
            <option value="Warden"> Warden</option>
            <option value="Mess"> Mess</option>
              </select>
            </div>
              <div class="top-row">
            <div class="field-wrap">
              <label>
                First Name<span class="req">*</span>
              </label>
              <input type="text" required autocomplete="off" name="fname"/>
            </div>
            <div class="field-wrap">
              <label>
                Last Name<span class="req">*</span>
              </label>
              <input type="text" required autocomplete="off" name="lname"/>
            </div>
          </div>
           <div class="top-row">
          <div class="field-wrap">
            <label>
              ID<span class="req">*</span>
            </label>
            <input type="text" required name="id"/>
          </div>
          <div class="field-wrap">
            <label>
              MOBILE NUMBER<span class="req">*</span>
            </label>
            <input type="number" required autocomplete="off" onblur="mob_ckeck()" id="mobile" name="mobNo"/>
          </div>
          </div>
          <span id="m2">
             <div class="top-row">
          <div class="field-wrap">
            <label>
              AGE<span class="req">*</span>
            </label>
            <input type="number" autocomplete="off" min="15" max="99" name="age"/>
          </div>
          <div class="field-wrap">
            <label>
              Sex <span class="req">*</span>
            </label>
            <input type="text" autocomplete="off" maxlength="1" name="sex"/>
          </div>
          </div>
        </span>
          <span id="m1">
           <div class="top-row" id="war3">
          <div class="field-wrap">
            <label>
              Hostel Block<span class="req" >*</span>
            </label>
            <input type="text"  autocomplete="off" maxlength="1" name="block" />
          </div>

          <div class="field-wrap" id="war1">
            <label>
              Room No.<span class="req">*</span>
            </label>
            <input type="number" autocomplete="off" name="roomNo"/>
          </div>
          </div>
        </span>
           <div class="top-row">
          <div class="field-wrap">
            <label>
              Email Address<span class="req">*</span>
            </label>
            <input type="email" required autocomplete="off" name="email"/>
          </div>
          <div class="field-wrap">
            <label>
              Set A Password<span class="req">*</span>
            </label>
            <input type="password" required autocomplete="off" name="password"/>
          </div>
          </div>
          <span id="war2">
           <div class="top-row">
         <div class="field-wrap">
             <select class="select-btn" name="messType">
            <option> North Indian Veg</option>
            <option> North Indian Non-Veg</option>
            <option> Special </option>
            <option> South Indian </option>
              <option> Rajeshwari Mess </option>
              </select>
            </div>
            <div class="field-wrap">
            <label>
              Mess Name<span class="req">*</span>
            </label>
            <input type="text" autocomplete="off" name="mess"/>
          </div>
          </div>
        </span>
          <button type="submit" class="button button-block"/>Get Started</button>
          </form>
        </div>
        <div id="login">
          <h1>Welcome Back!</h1>
          <form action="/login" method="post">
            <div class="field-wrap">
            <label>
